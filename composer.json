{
    "name": "bobdenotter/bolt",
    "description": "Sophisticated, lightweight & simple CMS",
    "homepage": "http://bolt.cm",
    "keywords": ["CMS", "Silex", "PHP", "Symfony"],
    "license": "MIT",
    "require": {
        "silex/silex": "1.0.*@dev",
        "symfony/yaml": "~2.2",
        "symfony/form": "~2.2",
        "symfony/validator": "~2.2",
        "symfony/config": "~2.2",
        "symfony/twig-bridge": "~2.2",
        "symfony/translation": "~2.2",
        "symfony/console": "~2.2",
        "symfony/filesystem": "~2.2",
        "doctrine/dbal": "2.3.*",
        "twig/twig": ">=1.8,<2.0-dev",
        "guzzle/guzzle": "3.2.*",
        "swiftmailer/swiftmailer": "4.3.*"
    },
    "require-dev": {
        "phpunit/php-code-coverage": "1.2.*@dev",
        "phpunit/phpunit": "3.7.13"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-0": {
            "Bolt": "app/src/",
            "Bolt\\Tests": "app/tests"
        }
    }
}
