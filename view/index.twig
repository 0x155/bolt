{% include '_header.twig' %}




{% set entries = content('entries', {'limit': 3, 'order': 'datecreated desc'}) %}

{% setcontent entries = "entries/latest/3" %}



{% for entry in entries %}
<article>
    {% if entry.image!="" %}
        <div class='imageholder'><img src="{{ entry.image|thumbnail(120, 120) }}"></div>
    {% endif %}
    
    <h2><a href="{{ entry.link }}">{{ entry.title }}</a></h2>
    
    {{ entry.teaser|raw }}

    <p class="meta"><a href="{{ entry.link }}">Link</a> - Posted by {{ entry.username }} on {{ entry.datecreated|date("M d, â€™y")}}</p>
    
</article>    
{% endfor %}


