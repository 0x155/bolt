{% include '_header.twig' %}


<h1>Files: {{path}}</h1>

{% if folders|length > 0 %}
<table class='dashboardlisting'>
    <tr><th>Folders</th><th>Modified</th></tr>
{% for folder in folders %}
    <tr>
        <td><a href="{{ path('files', { 'path': folder.newpath }) }}">{{ folder.foldername }}/</a></td>
        <td>{{ folder.modified }}</td>
    </tr>
{% endfor %}
</table>
{% endif %}

{% if files|length > 0 %}
<table class='dashboardlisting'>
    <tr><th>Files</th><th>Filesize</th><th>Modified</th><th>&nbsp;</th></tr>
{% for file in files %}
    <tr>
        <td>
            {% if file.type in ['jpeg', 'jpg', 'png', 'gif'] %}
                <a href="{{file.newpath|thumbnail(1000, 1000, 'r') }}" rel='shadowbox' title="Image: {{ file.filename }}">
                    {{ file.filename }}</a>    
            {% elseif file.type in ['twig', 'txt', 'html', 'md', 'htm', 'css', 'less', 'js', 'yml'] %}
                <a href="{{ path('fileedit', { 'file': file.newpath}) }}">
                    {{ file.filename }}</a>                      
            {% else %}
                <a href="/{{file.newpath}}" target="_blank">{{ file.filename }}</a>
            {% endif %}
        </td>
        <td>{{ file.filesize }}</td>
        <td>{{ file.modified }}</td>
        <td class='actions'>
            <div class="btn-group">
            <button class="btn btn-mini">
                <i class="icon-edit"></i> Options</button>
            <button class="btn dropdown-toggle btn-mini" data-toggle="dropdown">
            <span class="caret"></span>
            </button>
            
            <ul class="dropdown-menu pull-right">
                <li><a href="#">
                    <i class="icon-ban-circle"></i> Delete {{ file.filename }}</a></li>
                <li><a href="#">
                    <i class="icon-copy"></i> Duplicate {{ file.filename }}</a></li>
                <li class="divider"></li>
                <li><a class="nolink">Permissions: 
                        <strong><tt>rw-r--r--</tt></strong></a></li>      
                <li><a class="nolink">Owner / group: 
                        <strong><tt>apache staff</strong></a></li>      
                                  
            </ul>
            </div>
        
        </td>
    </tr>
{% endfor %}
</table>
{% endif %}


{% include '_footer.twig' %}