{##
 # Sidebar-Panel: Displays actions for files
 #}
{% extends '@bolt/_base/_panel.twig' %}

{% import '@bolt/_macro/_macro.twig' as macro %}

{% block panel_class 'panel-fileupload' %}

{% block panel_icon 'fa-cloud-upload' %}

{% block panel_head %}
    {{ __('general.phrase.upload-file-to-directory') }}
    {{  macro.typepopover() }}
{%  endblock panel_head %}

{% block panel_body %}
    <div class="file-upload">
    <span class="dragdrop-hint">
      <strong>Drop files in the file manager to upload them</strong>
    </span>
        <div class="text-center">
            <span class="or">{{ __('general.phrase.or') }}</span>
        </div>

        {{ include('@bolt/files/_upload.twig') }}
    </div>
{% endblock panel_body %}
