{% import '_macro/_panels.twig' as panels %}

<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-cog fa-fw"></i> {{__('Actions for %contenttypes%', {'%contenttypes%': context.contenttype.name})}}
    </div>

    <div class="panel-body">
        <a class="btn btn-primary" href="{{ path('editcontent', { 'contenttypeslug': context.contenttype.slug, 'id': '' }) }}">
            <i class="fa fa-plus"></i> {{ __('New %contenttype%', {'%contenttype%': context.contenttype.singular_name}) }}
        </a>
        {% if request('filter') or request('order') %}
            <a class="btn btn-tertiary" href="?">{{ __('Clear sort/filter') }}</a>
        {% endif %}

        <form class="form-inline" style="margin-top:15px;">
            <input type="text" class="form-control" value="{{ request('filter', '', true) }}" name="filter" style="width: 110px;" placeholder="{{ __('Filteringâ€¦') }}">
            <button type="submit" class="btn btn-tertiary">{{ __('Filter') }}</button>
            {% if request('filter') %}<p><a href="?">{{ __('Clear filter') }}</a></p>{% endif %}
        </form>
    </div>
</div>

{{ panels.lastmodified(context.contenttype.slug) }}

{{ panels.stack(7) }}