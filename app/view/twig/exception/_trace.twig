{%- if debug and exception is defined %}
    {% set i = 0 %}
    <div class="row">
        <code style="display:block; white-space: pre-wrap; word-break: break-all;">{{ exception.message|nl2br }}</code>
        <p></p>
        <code style="display:block; white-space: pre-wrap; word-break: break-all; text-align: left">
            {% spaceless %}
                {% for t in trace %}
                    <p>#{{ i }} {{ t.class|default() }}::{{ t.function|default() }}</p>
                    <p>  {{ t.file|default() }} # {{ t.line|default() }}</p>
                    {% set i = i + 1 %}
                {% endfor %}
            {% endspaceless %}
        </code>
    </div>
{% endif -%}
