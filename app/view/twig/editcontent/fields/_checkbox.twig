{#=== OPTIONS ========================================================================================================#}

{% set option = {
    class:  field.class|default(''),
    label:  field.label|default(''),
    info:   field.info|default('')
} %}

{#=== INIT ===========================================================================================================#}

{% set attr_checkbox = {
    checked:  context.content.get(contentkey),
    class:    option.class,
    name:     name,
    id:       key,
    type:     'checkbox',
    value:    '1'
} %}

{#=== FIELDSET =======================================================================================================#}

{# fieldset.checkbox already used: -> chkbox #}
<fieldset class="form-group checkbox">
    <label class="col-xs-3 control-label" for="{{ key }}">
        {{ (option.info) ? macro.infopop(labelkey, option.info) : labelkey }}
    </label>

    <div class="col-xs-9 checkbox">
        <label><input{{ macro.attr(attr_checkbox) }}></label>
    </div>
</fieldset>
