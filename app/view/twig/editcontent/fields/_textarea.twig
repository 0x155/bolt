{#=== OPTIONS ========================================================================================================#}

{% set option = {
    class:     field.class|default(''),
    height:    field.height|default(''),
    label:     field.label|default(''),
    required:  field.required|default(false),
}%}

{#=== INIT ===========================================================================================================#}

{% set attr_text = {
    class:     option.class,
    name:      key,
    required:  option.required,
    style:     option.height ? 'height: '~option.height~';' : '',
}%}

{#=== FIELDSET =======================================================================================================#}

<fieldset class="textarea">

    <div class="col-sm-12">
        <label class="control-label">{{ labelkey }}</label>
        <textarea{{ macro.attr(attr_text) }}>{{ ctx_content.get(key)|default('') }}</textarea>
    </div>

</fieldset>
