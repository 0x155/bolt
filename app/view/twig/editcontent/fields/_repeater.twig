{% extends '@bolt/_base/_fieldset.twig' %}

{% set repeatfields = context.content.get('contentkey') %}


{% block fieldset_type 'repeater' %}
{% block fieldset_label_text  field.name %}
{% block fieldset_label_info  field %}
{% block fieldset_label_class 'col-xs-12' %}

{% block fieldset_controls %}
    <script type="text/template">
        {% for key, field in field.fields %}
            {% include context.fields[field.type].template with {
            'key': field.name,
            'name': key~'['~field.name~'][]',
            'contentkey': field.name
            } %}
        {% endfor %}
    </script>
{% endblock fieldset_controls %}