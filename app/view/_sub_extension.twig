<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#{{ panelgroup }}" href="#{{ extension.namespace }}">{{ extension.name }}</a>

            <div class="pull-right">
                {% if extension.readme %}
                    <a data-target="#myModal" href="{{ path('readme', { extension: extension.namespace }) }}" class="btn btn-default btn-xs"
                       type="button" data-toggle="modal" >{{ __('View Readme') }}</a>
                {% endif %}
                {% if extension.config is defined %}
                    <a href="{{ path('fileedit', { 'file': "app/extensions/" ~ extension.config } ) }}" class="btn btn-default btn-xs"
                       type="button">{% if extension.config_writable %}{{ __('Edit Config') }}{% else %}{{ __('View Config') }}{% endif %}</a>
                {% endif %}
            </div>
        </h4>
    </div>
    <div id="{{ extension.namespace }}" class="panel-collapse collapse">
        <div class="panel-body">
            <p>{{ extension.description|raw }}</p>

            <p>{{ __('Author:') }} <strong>{{ extension.author }}</strong><br/>
                {{ __('Released:') }} {{ extension.first_releasedate|date("Y-m-d") }},
                {{ __('latest update:') }} {{ extension.latest_releasedate|date("Y-m-d") }} </p>

            <span class="label">{{ __('Name:') }} {{ extension.namespace }}</span>
            {% if extension.version %}<span class="label">{{ __('Version') }} {{ extension.version }}</span>{% endif %}
            {% if extension.required_bolt_version %}<span class="label {% if not extension.version_ok %}label-important{% endif %}"
                                                          title="{% if extension.highest_bolt_version %}{{ __('Tested in Bolt') }} {{ extension.highest_bolt_version }}.{% endif %}"
                >{{ __('Req. Bolt') }} {{ extension.required_bolt_version }}</span>{% endif %}

            {% if extension.type %}<span class="label">{{ extension.type }}</span>{% endif %}


        </div>
    </div>
</div>
