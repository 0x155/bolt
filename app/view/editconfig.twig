{% include '_header.twig' with { 'active':'settings' } %}


<h1>{{title}}</h1>

{% if ismobile %}
    movbile.
{% else %}
    nietmobiel..
{% endif %}

<form action="#" method="post" class="form-inline" autocomplete="off">

<div>
<textarea id="form_contents" name="form[contents]" required="required" class="CodeMirror-scroll">{{ form.vars.value.contents }}</textarea>
</div>

    {{ form_row(form._token) }}
<br />
    <input type="submit" name="submit" value="Save" class="btn btn-primary" />
</form>

<link rel="stylesheet" href="/app/view/lib/codemirror/codemirror.css">
<script src="/app/view/lib/codemirror/codemirror.js"></script>
{% if filetype in ['twig', 'html', 'htm'] %}
<script src="/app/view/lib/codemirror/mode/xml/xml.js"></script>
<script src="/app/view/lib/codemirror/mode/javascript/javascript.js"></script>
<script src="/app/view/lib/codemirror/mode/css/css.js"></script>
<script src="/app/view/lib/codemirror/mode/htmlmixed/htmlmixed.js"></script>
{% elseif filetype == "yml" %}
<script src="/app/view/lib/codemirror/mode/yaml/yaml.js"></script>
{% elseif filetype == "md" %}
<script src="/app/view/lib/codemirror/mode/markdown/markdown.js"></script>
{% elseif filetype in ['css', 'less'] %}
<script src="/app/view/lib/codemirror/mode/css/css.js"></script>
{% elseif filetype == "js" %}
<script src="/app/view/lib/codemirror/mode/javascript/javascript.js"></script>
{% endif %}

<script>
    var editor = CodeMirror.fromTextArea(document.getElementById("form_contents"), { 
        lineNumbers: true, 
        autofocus: true, 
        tabSize: 4,
        indentUnit: 4,
        indentWithTabs: false
    });

    editor.setSize(null, $(window).height() - 250);

</script>

{% include '_footer.twig' %}