<script>
    jQuery(document).ready(function($) {
        $('.extend-bolt-container').find('[data-action]').each(function(){
            var target = $(this);
            $.get('/bolt/extend/'+$(this).data('action'), function(data) {
                target.html(data);
            });
        });
    });
</script>

