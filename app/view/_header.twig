<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Pilex {% if title is defined %}- {{title}}{% endif %}</title>

    <!-- jQuery -->
    <script src="/app/view/js/jquery-1.7.2.min.js"></script>
    <script src="/app/view/js/jquery-ui-1.8.22.custom.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/app/view/css/flick/jquery-ui-1.8.22.custom.css">
    <script src="/app/view/js/jquery.plugins.js"></script>
    
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/app/view/css/bootstrap.css" />
    <link rel="stylesheet" href="/app/view/css/bootstrap-responsive.css" />
    <link rel="stylesheet" href="/app/view/css/pilex.css" />
    <script src="/app/view/js/bootstrap.js"></script>
    <link rel="stylesheet" href="/app/view/css/font-awesome.css" />

    {# <link rel="stylesheet" href="/app/view/css/responsivebar.css" /> #}
    
    <!-- Shadowbox -->
    <link rel="stylesheet" type="text/css" href="/app/view/lib/shadowbox/shadowbox.css">
    <script type="text/javascript" src="/app/view/lib/shadowbox/shadowbox.js"></script>
    
    <!-- redactor --> 
    <link rel="stylesheet" href="/app/view/lib/redactor/css/redactor.css" />
	<script src="/app/view/lib/redactor/redactor.js"></script>    

    <!-- jQuery file upload -->
    <link rel="stylesheet" href="/app/view/lib/upload/jquery.fileupload-ui.css">
    <script src="/app/view/lib/upload/jquery.ui.widget.js"></script>
    <script src="/app/view/lib/upload/jquery.iframe-transport.js"></script>
    <script src="/app/view/lib/upload/jquery.fileupload.js"></script>

    <!-- tagit -->
    <link rel="stylesheet" type="text/css" href="/app/view/lib/tag-it/jquery.tagit.css">
    <script src="/app/view/lib/tag-it/tag-it.js" type="text/javascript" charset="utf-8"></script>
        
    <script src="/app/view/js/pilex.js"></script>

    
</head>
<body>
    
{% if active is not defined %}{% set active="dashboard" %}{% endif %}
    
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
            </a>
            <a class="brand" href="{{ path('dashboard') }}">
                <strong>Pilex</strong> <span class="hidden-phone"> {% if app.config.general.sitename is defined %}- {{app.config.general.sitename}}{% endif %}</span>
            </a>
            <div class="nav-collapse">
                <ul class="nav pull-right">
                {% if app.session.get('user') is not null %}
                    <li class="{% if active in ['', 'dashboard'] %}active {% endif %}"><a href="{{ path('dashboard') }}">
                        <i class="icon-home"></i> Dashboard</a></li>
                    <li class="{% if active=='content' %}active {% endif %}dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="icon-sitemap"></i> Content <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            {% for slug, contenttype in app.config.contenttypes %}
                            <li><a href="{{ path('overview', { 'contenttypeslug': slug }) }}">
                                <i class="icon-tasks"></i>View {{ contenttype.name }}</a></li>
                            <li><a href="{{ path('editcontent', { 'contenttypeslug': slug, 'id': '' }) }}">
                                <i class="icon-plus"></i>New {{ contenttype.singular_name }}</a></li>
                            {% if not loop.last %}<li class="divider"></li>{% endif %}
                            {% endfor %}
                            
                        </ul>
                    </li>                    
                    <li class="{% if active=='settings' %}active {% endif %}dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-cogs"></i> Settings
                            <b class="caret"></b>
                            </a>
                        <ul class="dropdown-menu">
                            <li class="nav-header">Configuration</li>
                            <li><a href="{{ path('users') }}"><i class="icon-group"></i>Users</a></li>
                            <li><a href="{{ path('configedit', { 'file': 'config'}) }}"><i class="icon-cog"></i>Configuration</a></li>
                            <li><a href="{{ path('configedit', { 'file': 'contenttypes'}) }}"><i class="icon-cog"></i>Contenttypes</a></li>
                            <li><a href="{{ path('configedit', { 'file': 'taxonomy'}) }}"><i class="icon-tags"></i>Taxonomy</a></li>
                            <li class="divider"></li>
                            <li class="nav-header">Maintenance</li>
                            <li><a href="{{ path('dbupdate') }}"><i class="icon-wrench"></i>Check database</a></li>
                            <li><a href="{{ path('clearcache') }}"><i class="icon-magic"></i>Clear the cache</a></li>
                        </ul>
                    </li>
                    <li class="divider-vertical"></li>
                    <li><a href="/" target="_blank"><i class="icon-external-link"></i> View site</a></li>                    
                    <li class="divider-vertical"></li>
                    <li>
                        <a href="{{ path('logout') }}"><i class="icon-signout"></i> Logout {{ app.session.get('user').username }}</a> 
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('login') }}"><i class="icon-signin"></i> Login</a> 
                    </li>
                {% endif %}
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
</div>

<div class="container-fluid">

{% if app.session.hasFlash('info') %}
	<div class="alert alert-info">
    	<button class="close" data-dismiss="alert">×</button>
		{{ app.session.flash('info') }}
	</div>
{% endif %}

{% if app.session.hasFlash('error') %}
	<div class="alert alert-error">
    	<button class="close" data-dismiss="alert">×</button>
		{{ app.session.flash('error') }}
	</div>
{% endif %}

{% if app.session.hasFlash('success') %}
	<div class="alert alert-success">
    	<button class="close" data-dismiss="alert">×</button>
		{{ app.session.flash('success') }}
	</div>
{% endif %}